<h1>Edit movie</h1>

<% @the_movie.errors.full_messages.each do |message| %>
  <p style="color: red;"><%= message %></p>
<% end %>

<%= form_with(url: movie_path(@the_movie), method: :patch, data: { turbo: false }) do %>
  <div>
    <%= label_tag :title %>

    <%= text_field_tag "movie[title]", @the_movie.title, {id: "title_box" } %>
  </div>

  <div>
    <%= label_tag :description %>

    <%= text_area_tag "movie[description]", @the_movie.description, { rows: 3 } %>
  </div>

  <%= button_tag "Update Movie" %>
<% end %>
